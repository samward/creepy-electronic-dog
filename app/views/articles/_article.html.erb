<div class="card article">
  <div class="card-image" style="background-image: url('<%= article.image_src %>');"></div>
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text"><%= article.description %></p>
      <%= content_tag(:div, class: "article-like-button", id: "article-like-button-#{article.id}") do %>
        <%= render(partial: "like_button", locals: { article: article }) %>
      <% end %>
  </div>
</div>
